{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "module":"es2015",
        "lib": ["esnext", "dom"],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "swc": true,
        "compilerOptions": {
            "module":"CommonJS",
        }
    }
}
